<%- include("../elements/header.ejs") %>
<link rel="stylesheet" types="text/css" href="/styles/entries-styles.css" />
<!-- Quill library for text editor -->
<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
<script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
<link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>

<body class="entry-body">
    <%- include("../elements/sidebar-user.ejs") %>

    <%- include("../elements/topbar-internal.ejs") %>
<div class="main-body">
    <div>
        <div class="title-wrapper">
            <div class="title-with-border">
                <div>Add New Entry</div>
                <div class="title-line"></div>
            </div>
        </div>

        <div class="explanatory-cont">
            <div>For more information, please accesss...</div>
        </div>

        <div class="entry-cont">
            <div class="entry-cont-top">
                <div class="icon-txt">
                    <div><img src="/files/user-cont.png" alt="user"></div>
                    <div><%= userName %> <%= userSurname %></div>
                </div>
                <div class="icon-txt">
                    <div class="icon-txt">
                        <div><img src="/files/calendar-cont.png" alt="user"></div>
                        <div><%= dateToday %></div>
                    </div>
                </div>
            </div>

            <div class="entry-cont-body">
                <div class="question-img">
                    <div class="entry-cont-body-question">
                        <span class="bb">Hello, <%= userName %> <%= userSurname %>.</span><br>
                        <span class="bb-lg">How are you today?</span><br> 
                        Please use the text field below to describe how you feel today.
                    </div>
                    <div>
                        <img src="/files/il-18.svg" alt="entry">
                    </div>
                </div>


                <div id="entry-field">
                </div>

                <div class="entry-cont-body-question">
                    <span class="bb">Would you like to add some custom files to your entry?</span><br> 
                    Accepted file types are: PNG, JPG, JPEG, PDF.<br>
                    You can add up to 3 files.
                </div>

                <div class="files-cont">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">Choose files...</label>
                    </div>
                </div>

                
                <div class="title-cont">
                    <span class="bb">Lastly, please tell us how you would like to name your entry.</span><br> 
                    If you don't want to name your entry, please leave this field empty.<br>
                    The title will be generated automatically by the system.
                    <input type="text" class="form-control" name="entry-title" id="entry-title" placeholder="Entry - <%= dateToday %>" />
                </div>

                <div class="submission-cont">
                    <div><button class="btnGradBlue" id="submitEntryBtn">Submit</button></div>
                    <div><img src="/files/il-17.svg" alt="submit"></div>
                </div>
                
            </div>

        </div>

    </div>
</div>

<script>
    $("#add-entry-element").addClass("active-sidebar-element");
    bsCustomFileInput.init(); 
</script>
<script type="text/javascript" src="/scripts/entries/add-entry.js"></script>
</body>

</html>