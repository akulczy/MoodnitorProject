<%- include("../elements/header.ejs") %>
<link rel="stylesheet" types="text/css" href="/styles/entries-styles.css" />
<script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
<link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>

<body class="entry-body">
    <% if(isSystemUser || isIndUser) { %>
        <%- include("../elements/sidebar-user.ejs") %>
    <% } else { %>
        <%- include("../elements/sidebar-specialist.ejs") %>
    <% } %>

    <%- include("../elements/topbar-internal.ejs") %>
    <div class="main-body entry-pad">
        <div class="container-shadow report-default-cont mail-cont">

            <div class="title-wrapper">
                <div class="title-with-border">
                    <% if(isSystemUser) { %>
                        <div>Contact Your Specialist</div>
                    <% } else { %>
                        <div>Contact Our Support</div>
                    <% } %>
                    <div class="title-line"></div>
                </div>
            </div>

            <% if(isSystemUser) { %>
                <div class="align-sm-txt">
                    <small>Please use the field below if you wish to send an email to your assigned Specialist.</small>
                </div>
                <div class="align-sm-txt mobile-sm-1">
                    <small>The email will be sent to: <strong><%- user.Specialist.name + " " + user.Specialist.surname %></strong></small>
                </div>
            <% } else { %>
                <div class="align-sm-txt mobile-sm-1">
                    <small>Please use the field below if you wish to contact our support regarding the Moodnitor system.</small>
                </div>
            <% } %>
            <div class="mail-field-align">            
                <div id="mail-field">
                </div>
            </div>
            <div class="btn-align-center">
                <button class="btnGradBlue" id="submitMailBtn">Send</button>
            </div>
        </div>
    </div>
<script>
    $("#contact-element").addClass("active-sidebar-element");
</script>

<% if(isSystemUser) { %>
    <script type="text/javascript" src="/scripts/contact/contact-user.js"></script>
<% } else { %>
    <script type="text/javascript" src="/scripts/contact/contact-ind-user.js"></script>
<% } %>

</body>

</html>